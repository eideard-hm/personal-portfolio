---
const icons: Record<Tech, any> = {
  '.NET': (await import('~icons/logos/dotnet?raw')).default,
  'C#': (await import('~icons/logos/c-sharp?raw')).default,
  'Next.js': (await import('~icons/logos/nextjs-icon?raw')).default,
  'Node.js': (await import('~icons/logos/nodejs-icon?raw')).default,
  'Sql Server': (await import('~icons/logos/microsoftsqlserver?raw')).default,
  Angular: (await import('~icons/logos/angular-icon?raw')).default,
  Astro: (await import('~icons/logos/astro-icon?raw')).default,
  Git: (await import('~icons/logos/git?raw')).default,
  Go: (await import('~icons/logos/go?raw')).default,
  Javascript: (await import('~icons/logos/javascript?raw')).default,
  MongoDB: (await import('~icons/logos/mongodb-icon?raw')).default,
  Qwik: (await import('~icons/logos/qwik-icon?raw')).default,
  React: (await import('~icons/logos/react?raw')).default,
  Typescript: (await import('~icons/logos/typescript?raw')).default,
};

interface Props {
  name: Tech;
}

const { name } = Astro.props;
---

<Fragment set:html={icons[name as Tech]} />
