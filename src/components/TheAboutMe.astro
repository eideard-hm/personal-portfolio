---
import { Content as AboutMeText } from '@/data/about-me.md';

const logoSena = await import('@/assets/logos/sena.svg?raw');
const logoUdemy = await import('~icons/logos/udemy-icon?raw');
---

<div class="about__grid" id="about-me">
  <div class="about__card">
    <h2>Acerca de mi</h2>
    <div class="about__text">
      <AboutMeText />
    </div>
  </div>
  <div class="about">
    <div class="about__bubble">
      <h3 class="bubble__title">Autodidacta</h3>
      <div class="bubble__location">Udemy</div>
      <div class="bubble__logo">
        <Fragment set:html={logoUdemy.default} />
      </div>
      <div class="bubble__date">2020-Actualmente</div>
    </div>
    <div class="about__bubble">
      <h3 class="bubble__title">
        Tecnólogo en Análisis y Desarrollo de Sistemas de Información
      </h3>
      <div class="bubble__location">Servicio Nacional de Aprendizaje</div>
      <div class="bubble__logo">
        <Fragment set:html={logoSena.default} />
      </div>
      <div class="bubble__date">2021-2021</div>
    </div>
    <div class="about__bubble">
      <h3 class="bubble__title">Técnico en Programación de Software</h3>
      <div class="bubble__location">Servicio Nacional de Aprendizaje</div>
      <div class="bubble__logo">
        <Fragment set:html={logoSena.default} />
      </div>
      <div class="bubble__date">2019 - 2020</div>
    </div>
  </div>
</div>

<style lang="scss">
  .about__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(420px, 100%), 1fr));
    row-gap: var(--space-2xl);
  }

  .about__card {
    @include card;

    h2 {
      font-size: var(--step-3);
    }
  }

  .about__text {
    margin-top: var(--space-m);
  }

  .about {
    display: flex;
    flex-direction: column;
    align-items: start;
    position: relative;

    --line-width: calc(var(--step--2) / 2);
    --left-margin: var(--space-l-xl);
    --circle-size: var(--step-0);
    --distance: var(--space-2xl);

    &::after {
      position: absolute;
      background-color: var(--danger);
      width: var(--line-width);
      // height: calc(100% + (var(--distance) * 2));
      height: calc(100% + (var(--distance)));
      top: var(--step-0);
      left: calc(var(--left-margin) - (var(--line-width) / 2));
      content: '';
      z-index: -10;
    }
  }

  .bubble__logo {
    color: var(--bg-details);
    width: var(--space-xl-2xl);
    height: var(--space-xl-2xl);
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;

    :global(svg) {
      fill: currentColor;
      height: var(--space-xl-2xl);
      opacity: 0.5;
    }
  }

  .bubble__title {
    font-size: var(--step-1);
    padding-right: calc(var(--space-xl-2xl) + 0.5rem);
  }

  .about__bubble {
    @include shadow;
    // width: calc(100% - var(--left-margin) * 2);
    line-height: 1.5;
    margin-bottom: var(--space-xl);
    background-color: var(--bg-secondary);
    border-radius: 10px;
    padding: 0.5rem 1rem;
    margin-left: calc(var(--left-margin) * 2);
    position: relative;
  }

  .about__bubble::before {
    content: '';
    width: var(--circle-size);
    height: var(--circle-size);
    left: calc((var(--left-margin) * -1) - (var(--circle-size) / 2));
    top: calc((var(--step-0) * 0.75) + 0.5rem - (var(--circle-size) / 4));
    border-radius: 100%;
    background-color: var(--bg);
    border: solid 3px var(--danger);
    position: absolute;
  }

  .about__bubble::after {
    content: '';
    z-index: -5;
    height: var(--line-width);
    width: calc(var(--left-margin) * 1.3);
    top: calc((var(--step-0) * 0.75) + 0.5rem + (var(--line-width) / 4));
    position: absolute;
    left: calc((var(--left-margin) * -1) - (var(--circle-size) / 4));
    background-color: var(--danger);
  }
</style>
